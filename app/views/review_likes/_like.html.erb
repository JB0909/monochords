<% if user_signed_in? && review.liked_by?(current_user) %>
    <%= link_to music_review_review_likes_path(review_id: review.id, music_id: review.music.id), method: :delete, remote: true, id: :"review-like-button-#{review.id}" do %>
        <i class="fas fa-heart"></i>
    <% end %>
    <%= review.review_likes.count %>
<% else %>
    <%= link_to music_review_review_likes_path(review_id: review.id, music_id: review.music.id), method: :post, remote: true, id: :"review-like-button-#{review.id}" do %>
        <i class="far fa-heart"></i>
    <% end %>
    <%= review.review_likes.count %>
<% end %>