<% if user_signed_in? && record.liked_by?(current_user) %>
    <%= link_to record_record_likes_path(record_id: record.id), method: :delete, remote: true, id: :"record-like-button-#{record.id}" do %>
        <i class="fas fa-heart"></i>
    <% end %>
    <%= record.record_likes.count %>
<% else %>
    <%= link_to record_record_likes_path(record_id: record.id), method: :post, remote: true, id: :"record-like-button-#{record.id}" do %>
        <i class="far fa-heart"></i>
    <% end %>
    <%= record.record_likes.count %>
<% end %>