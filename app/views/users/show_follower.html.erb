<div class="row">
    <div class="col-4">
        <%= render "users/profile" %>
    </div>

    <div class="col-8">

        <div class="post-wrapper">
            <header class="common-main-title">
                <h2>
                    <span>フォロー</span>
                </h2>
            </header>
            <% if @users.blank? %>
                    <div class="common-main-blank">
                        <span>表示項目がありません。</span>
                    </div>
            <% else %>
                <% @users.each do |u| %>
                    <div class="post-container">
                        <div class="post-side-frame">
                            <figure class="post-avatar">
                                <%= link_to user_path(u) do %>
                                    <% if u.profile_image.present? %>
                                        <%= image_tag attachment_url(u, :profile_image, :fill, 50, 50, format: "jpg"), {class: "mypage-image"} %>
                                    <% else %>
                                        <%= image_tag ("default.png"), :size => '50x50' %>
                                    <% end %>
                                <% end %>
                            </figure>
                        </div>

                        <div class="post-main-frame">
                            <div class="post-name">
                                <%= link_to u.username, user_path(u) %>
                            </div>

                            <div class="introduction">
                                <span></span>
                            </div>
                        </div>
                    </div>
                <% end %>
            <% end %>
            <div class="common-main-count">
                <span>全<%= @users.count %>件を表示</span>
            </div>
        </div>
    </div>
</div>