<div class="row">
  <div class="col-12">
    <div class="form-container">
      <header class="form-title">
        <h2>アカウント作成</h2>
      </header>
      <div class="form-subtitle">
        <span>MONOCHODSでアカウントを作成</span>
      </div>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>
        <div class="username-field">
          <%= f.text_field :username, autofocus: true, placeholder: "ユーザーネーム", class: "field" %>
        </div>
        <div class="email-field">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", class: "field" %>
        </div>
        <div class="password-field">
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード", class: "field" %><br />
          <% if @minimum_password_length %>
            <span>(<%= @minimum_password_length %> 文字以上)</span>
          <% end %>
        </div>
        <div class="password-field">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード再確認", class: "field" %>
        </div>
        <div class="field-action">
          <%= f.submit "アカウント作成", class: "action" %>
        </div>
      <% end %>
      <div class="link-container">
        <%= render "users/shared/links" %>
      </div>
    </div>
  </div>
</div>
