<div class="row">
  <div class="col-12">
    <div class="form-container">
      <header class="form-title">
        <h2>パスワードを忘れましたか？</h2>
      </header>
      <div class="form-subtitle">
        <span>MONOCHODSのパスワードを変更</span>
      </div>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="password-field">
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: "パスワード", class: "field" %><br />
          <% if @minimum_password_length %>
            <span>(<%= @minimum_password_length %> 文字以上)</span>
          <% end %>
        </div>

        <div class="password-field">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード再確認", class: "field" %>
        </div>

        <div class="field-action">
          <%= f.submit "パスワード変更", class: "action" %>
        </div>

      <% end %>
      <div class="link-container">
        <%= render "users/shared/links" %>
      </div>
    </div>
  </div>
</div>



