//showページ
$('#record_comment').html("<%= j(render 'records/comments_list', record: @record_comment) %>");
$('#review_comment').html("<%= j(render 'reviews/comments_list', review: @review_comment) %>");
$('#micropost_comment').html("<%= j(render 'microposts/comments_list', micropost: @micropost_comment) %>");
//一覧ページ
<% if @micropost.present? %>
    $('#micropost-comment-count-<%= @micropost.id %>').html("<%= escape_javascript(render partial: "static_pages/micropost_comment_count", locals: { micropost: @micropost }) %>");
    $('#micropost-comment-view-<%= @micropost.id %>').html("<%= escape_javascript(render partial: "static_pages/micropost_comment_view", locals: { micropost: @micropost }) %>");
    $("#micropost-val-<%= @micropost.id %>").find('input').val("");
<% elsif @record.present? %>
    $('#record-comment-count-<%= @record.id %>').html("<%= escape_javascript(render partial: "static_pages/record_comment_count", locals: { record: @record }) %>");
    $('#record-comment-view-<%= @record.id %>').html("<%= escape_javascript(render partial: "static_pages/record_comment_view", locals: { record: @record }) %>");
    $("#record-val-<%= @record.id %>").find('input').val("");
<% elsif @review.present? %>
    $('#review-comment-count-<%= @review.id %>').html("<%= escape_javascript(render partial: "static_pages/review_comment_count", locals: { review: @review }) %>");
    $('#review-comment-view-<%= @review.id %>').html("<%= escape_javascript(render partial: "static_pages/review_comment_view", locals: { review: @review }) %>");
    $("#review-val-<%= @review.id %>").find('input').val("");
<% end %>
//共通
$("#content").val("");
$('.js-text-field').css({ 'height' : 'auto'});
$('.js-submit').css({ 'display' : 'none'});
$(".js-text-count").text("");
$(".text-count").text("");