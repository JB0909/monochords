<% if micropost.liked_by?(current_user) %>
    <%= link_to micropost_likes_path(micropost_id: micropost.id), method: :delete, remote: true, id: :"like-button-#{micropost.id}" do %>
        <i class="fas fa-heart"></i>
    <% end %>
    <%= micropost.likes.count %>
<% else %>
    <%= link_to micropost_likes_path(micropost_id: micropost.id), method: :post, remote: true, id: :"like-button-#{micropost.id}" do %>
        <i class="far fa-heart"></i>
    <% end %>
    <%= micropost.likes.count %>
<% end %>